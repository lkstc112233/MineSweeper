<Window x:Class="MineSweeper.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MineSweeper"
        mc:Ignorable="d"
        Title="Settings"
        SizeToContent="Height"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow" Width="168.348">
    <Grid>
        <GroupBox Header="Settings" Padding="5">
            <StackPanel>
                <TextBlock>Width</TextBlock>
                <TextBox HorizontalAlignment="Stretch" Text="{local:SettingBinding Width}"/>
                <TextBlock>Height</TextBlock>
                <TextBox HorizontalAlignment="Stretch" Text="{local:SettingBinding Height}"/>
                <TextBlock>Mines</TextBlock>
                <TextBox HorizontalAlignment="Stretch" Text="{local:SettingBinding Mines}"/>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
